<h1>Confirmation</h1>

<%= form_for @signup, :url => signup_confirmation_path(params[:id]) do |f| %>
    <% if @signup.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% for message in @signup.errors.full_messages %>
                <li><%=  message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="actions"><%= f.submit "Submit" %></div>
<% end %>