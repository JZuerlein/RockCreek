
<h1>Invite Users</h1>

<%= render 'form' %>

<h2>Outstanding Invitations</h2>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Email Address</th>
    <th>Date Sent</th>
  </tr>
  </thead>

  <tbody>
      <% @outstanding_invitations.each do |invite_user| %>
          <tr>
            <td><%= invite_user.email %></td>
            <td><%= invite_user.email_invitation_sent_at %></td>

            <td><%= link_to 'Destroy', invite_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
  </tbody>
</table>

