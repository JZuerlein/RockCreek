<h1>Sign Up</h1>
<%= form_for(@signup, :html => {:class => 'form-horizontal' }) do |f| %>
    <%if @signup.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% for message in @signup.errors.full_messages %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
<% end%>

    <div class="control-group">
      <%= f.label :first_name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :first_name %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :last_name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :last_name %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :email, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :email %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :company, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :company %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password, :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password_confirmation, :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password_confirmation %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :site_address, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :site_address %>
      </div>
    </div>

    <%=  f.hidden_field :stripe_token %>
    <%=  f.hidden_field :last_four_digits %>
    <%=  f.hidden_field :plan_id %>

    <div id="credit-card">

      <div id="credit-card-errors">
        <div id="stripe-error-message">

        </div>
      </div>

        <div class="control-group">
          <%=  label_tag :credit_card, 'Credit Card Number', :class => 'control-label' %>
          <div class="controls">
            <%=  text_field_tag :credit_card, nil , name: nil %>
          </div>
        </div>

        <div class="control-group">
          <%= label_tag :cvc_code, 'Security Code on Card (CVC)', :class => 'control-label' %>
          <div class="controls">
            <%= text_field_tag :cvc_code, nil, name: nil %>
          </div>
        </div>

        <div class="control-group">
          <%=  label_tag :expires_month, 'Expiration Date', :class => 'control-label' %>
          <div class="controls">
            <%=  select_month nil, {add_month_numbers_true: true}, {name: nil, id: 'expires_month'} %>
            <%=  select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: 'expires_year'} %>
          </div>
        </div>
    </div>

    <div class="control-group">
      <label class="control-label"></label>
      <div class="controls">
        <div class="btn-toolbar">
          <%=  f.submit("Register", :id => "register_button", :class => 'button') %>
        </div>
      </div>
    </div>

<% end %>